{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "todo",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 2
      },
      "dueDate": {
        "type": "string",
        "pattern": "^\\d{4}\\-(0[1-9]|1[012])\\-(0[1-9]|[12][0-9]|3[01])$|^\\d{4}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d\\.\\d+(?:[+-][0-2]\\d:[0-5]\\d|Z)$"

      }
    },
    "required": [
      "name",
      "dueDate"
    ],
    "additionalProperties": false
}
  